{{page-title "Create post"}}

<h1 class="text-4xl font-extrabold">
  Create new post
</h1>

<div class="grid sm:grid-cols-2 gap-6 max-w-3xl mt-8 items-start">
  <FormField @label="Category">
    <FormSelect
      @options={{this.categoryOptions}}
      @selectedOptions={{this.selectedCategory}}
      @placeholder="Select category"
      {{on "change" this.handleCategoryChange}}
    />
  </FormField>

  <FormField @label="Tags">
    <FormSelect
      multiple
      @options={{this.tagOptions}}
      @selectedOptions={{this.selectedCategory}}
      @placeholder="Select tags"
      {{on "change" this.handleTagsChange}}
    />
  </FormField>

  <FormField @label="Content" class="sm:col-span-2">
    <Textarea
      @value={{@model.content}}
      class="px-4 py-2 border border-gray-300 rounded-md"
      rows="5"
    />
  </FormField>

  <div>
    <Button type="submit" {{on "click" (perform this.createPost)}}>
      Save
    </Button>
  </div>
</div>